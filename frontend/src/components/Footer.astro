    gap: 2rem;
    padding: 1.5rem 0;

    @media screen and (min-width: 768px) {
      flex-direction: row;
    }
  }

</style>
<footer class="mt-auto max-w-screen-md container mx-auto">
  <div class="px-0">
    <hr aria-hidden="true" class="border-black border-1 dark:border-white"/>
  </div>
  <div class="footer-wrapper">
    <span class="order-1"> Copyright Â© 2023 </span>
    <span class="flex md:order-2 items-center">
      <SocialIcon client:only="vue" />
