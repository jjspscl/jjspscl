---
import { storyblokEditable, renderRichText } from "@storyblok/astro";

interface Props {
  blok: any;
  slug: string;
}
const { blok, slug } = Astro.props;
const renderedRichText = renderRichText(blok.content);
---

<article
  {...storyblokEditable(blok)}
  transition:name={slug}
  transition:animate="initial"
  class="container bg-pinoy-cream-500 rounded text-pinoy-blacked-500"
>
  <div class="container mx-auto mb-12">
    <h1 class="text-6xl text-[#50b0ae] font-bold mt-12 mb-4">
      {blok.title}
    </h1>
    <h3 class="text-3xl text-[#1d243d] font-bold mb-4">
      {blok.created_at}
    </h3>
    <h2 class="text-2xl text-[#1d243d] font-bold mb-4">
      {blok.subtitle}
    </h2>
    <Fragment set:html={renderedRichText} />
  </div>
</article>
