---
import MyImage from "@components/assets/Me.astro";
import Root from "@components/layouts/root.astro";

import { links } from "../lib/constants/links";
import { TRANSITION_NAMES } from "../lib/constants/transition";

---

<Root>
    <main
        class="flex-1 container mx-auto flex flex-col justify-center items-center"
    >
        <section class="flex justify-center mb-10">
            <div class="flex flex-col sm:flex-row items-center">
                <span class="mb-10 sm:mb-0" transition:name={TRANSITION_NAMES.MY_IMAGE}>
                    <a 
                        aria-label="Go to me"             
                        class="flex items-center"
                        href="/about"
                    >
                        <MyImage/>
                    </a>
                </span>
                <a 
                    aria-label="Go to me"             
                    class="flex items-center"
                    href="/about"
                >
                    <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold mb-10 highlight-text md:ml-10 text-center md:text-left leading-tight">i'm <br/>joshua</h1>
                </a>
            </div>
        </section>
        <section class="flex gap-x-10 justify-center">
            {
                links.map(({ href, text }) => (
                    <a 
                        class="text-xl md:text-2xl font-bold hover:underline" 
                        data-astro-prefetch
                        href={href}  
                    >
                        {text}
                    </a>
                ))
            }
        </section>
    </main>
</Root>
